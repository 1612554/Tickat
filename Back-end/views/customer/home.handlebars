 <style>
     .comming-box .card .card-img-top{
         height: 150px;
     }
 </style>
 <!-- carousel intro start -->
    <div class="slide-intro">
      <div id="carouselExampleIndicators" class="carousel slide slide-intro" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
          </ol>
          <div class="carousel-inner">
            {{#each slide}}
                <div class="carousel-item">
                <img class="d-block w-100" src="{{this}}" alt="First slide">
                </div>
            {{/each}}
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    <!-- carousel intro end -->

  <!-- comming event start -->
    <div class="container comming-box">
      <h1 class="title-cate" style="margin-top:3%;margin-bottom: 5%">Sự kiện sắp diễn ra</h1>
      <div class="row">
        
        {{#each events}}
            <div class=" col-sm-12 col-lg-6 wow bounceInLeft">
                <div class="card" onclick="location.href='./html/a2-trangchitietsp.html'">
                    <img class="card-img-top" src="{{img}}" alt="Card image cap">
                    <span class="badge-price">
                        {{tickets.[0].price}} VND
                    </span>
                    <div class="card-body row">
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-3">
                        <div class="date-box">
                            <div class="date-header">
                                April
                            </div>
                            <div class="date-body">
                                27
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-9">
                        <h5 class="card-title">{{name}}</h5>
                        <hr>
                        <p class="card-text"><i class="fa fa-clock-o" aria-hidden="true"></i>{{date}}</p>
                        <p class="card-text"><i class="fa fa-map-marker" aria-hidden="true"></i> {{address}}</p>
                    </div>
                    </div>
                </div>
            </div>
        {{/each}}
      </div>

      <div style="text-align: center" >
        <button class="btn-more" onclick="location.href='./html/all-events.html'" style="margin-top:2%;">Xem thêm</button>
      </div>
    </div>
    <!-- comming event end -->
 

<script>
    document.getElementsByClassName('carousel-item')[0].classList.add('active');
</script>