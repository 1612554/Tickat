 <style>
     .card{
         margin:0px
     }
     .pag li.active a{
         background: blue;
         color: white
     }
 </style>
 <!-- body start -->
    <div class="container detail mt-100">
      <div class="ticket">
        <div class="name-ticket">MSI LEAGUE OF LEGEND</div>
        <div class="info">
          22-05-2019 |  Tp Ho Chi Minh
        </div>
      </div>
      <div class="header">
        <div id="accordianId" role="tablist" aria-multiselectable="true">
          <div class="card" title="Click to view">
            <div class="card-header" role="tab" id="section1HeaderId">
              <h5 class="mb-0">
                <button class="btn btn-link" style="width:100%" type="button" data-toggle="collapse" data-parent="#accordianId" href="#section1ContentId" aria-expanded="true" aria-controls="section1ContentId">
                    <span class="float-left"><i class="fa fa-chevron-right ic-collapse" aria-hidden="true"></i> Total</span>
                    <span class="color-red float-right">26.000.000</span>
                </button>
              </h5>
            </div>
            <div id="section1ContentId" class="collapse in" role="tabpanel" aria-labelledby="section1HeaderId">
              <div class="card-body">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Type</th>
                      <th>Amount</th>
                      <th>Unit price</th>
                      <th>Apply voucher</th>
                      <th>Money</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td scope="row">VIP</td>
                      <td>50</td>
                      <td>250.000</td>
                      <td>250.000</td>
                      <td>12.250.000</td>
                    </tr>
                    <tr>
                        <td scope="row">Normal</td>
                        <td>100</td>
                        <td>150.000</td>
                        <td>550.000</td>
                        <td>14.450.000</td>
                    </tr>
                    <tr>
                        <td scope="row">Free</td>
                        <td>10</td>
                        <td>0</td>
                        <td>0</td>
                        <td>0</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td class="color-red">700.000</td>
                        <td class="color-red">26.700.000</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="feature">
        <div class="form-group filter">
          <div class="type">
            <label class="title">Type of tickets</label>
            <select class="form-control form-control-sm" name="" id="">
              <option>All</option>
              <option>VIP tickets</option>
              <option>Normal tickets</option>
              <option>Free tickets</option>
            </select>
          </div>

          <div class="entry">
            <label class="title">Show</label>
            <select class="form-control form-control-sm" name="" id="entry">
              <option value="10">10</option>
              <option value="25">25</option>
              <option value="50">50</option>
              <option value="75">75</option>
            </select>
            <label class="title">entries</label>
          </div>
        </div>
      </div>
      <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Customer</th>
                <th>OrderDate</th>
                <th>Type</th>
                <th>Amount</th>
                <th>Unit price</th>
                <th>Voucher</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
                {{#each order_details}}
                <tr>
                    <td>{{../this.name}}</td>
                    <td>{{../this.date_bought}}</td>
                    <td>{{ticket.type_of_ticket.name}}</td>
                    <td>{{amount}}</td>
                    <td>{{ticket.price}}</td>
                    <td>No</td>
                    <td>
                        <script>
                            var sum = parseInt({{this.ticket.price}}) * parseInt({{this.amount}});
                            document.write(sum.toLocaleString('it-IT', {style : 'currency', currency : 'VND'}));
                        </script>
                    </td>
                </tr>
                {{/each}}
            {{/each}}
    </table>

        <div class="pag">
            <nav style="float: right; margin-right:10%">
                {{{paginate pagination paginationClass="pagination"}}}
            </nav>
        </div>
    </div>
 <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script> 
<script>
    $('#entry').change(function (e) { 
        e.preventDefault();
        var url = window.location.href+"";
        url=url.replace(/limit=\d+/,"");
        if(!url.includes("?"))
            url+="?";
        url+="limit="+$(this).val();
        window.location.href = url;
    });

    $(document).ready(function(e) {
        var selectedIndex={{pagination.limit}}||10; 
        $('#entry').val(selectedIndex);
    });
</script>